<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ulearn">

<head>
  <metal:block fill-slot="top_slot">
      <tal:insert tal:replace="nothing"
                  tal:define="dummy python:request.set('enable_border', 1);
                              disable_column_one python:request.set('disable_plone.rightcolumn',1);" />
    </metal:block>
</head>

<body>

  <metal:main metal:fill-slot="main"
              tal:define="b_start python:0;
                         b_start request/b_start | b_start;
                         continguts python: view.getContent();
                         path python: view.get_container_path()">

  <div id="librarysearch">

    <h1 class="documentFirstHeading" tal:content="context/Title" />

    <div class="documentDescription" tal:content="context/Description">Descripció</div>


    <div class="caixessearch">
      <div id="searchinputcontentserveis">

        <fieldset id="facetes">
          <legend>Facetes</legend>
          <div class="row-fluid">
            <div class="span3">
              <div class="span12"><input type="checkbox" name="facetes" value="ambit" tal:attributes="data-name path"/>Àmbit</div>
              <div class="span12 ambit" data-id="ambit" style="display:none;">
                <select class="selectpicker" multiple tal:attributes="data-name path">
                  <option>MustardMustardMustard</option>
                  <option>Recerca</option>
                  <option>Relish</option>
                </select>
              </div>
            </div>
            <div class="span3 ">
              <div class="span12"><input type="checkbox" name="facetes" value="ubicacio" tal:attributes="data-name path"/>Ubicació</div>
              <div class="span12 ubicacio" data-id="ubicacio" style="display:none;">
                <select class="selectpicker" multiple tal:attributes="data-name path">
                  <option>MustardMustardMustard</option>
                  <option>Terrassa</option>
                  <option>Relish</option>
                </select>
              </div>
            </div>
            <div class="span3">
              <div class="span12"><input type="checkbox" name="facetes" value="prestador" tal:attributes="data-name path"/>Prestador</div>
              <div class="span12 prestador" data-id="prestador" style="display:none;">
                <select class="selectpicker" multiple tal:attributes="data-name path">
                  <option>MustardMustardMustard</option>
                  <option>upcnet</option>
                  <option>web</option>
                </select>
              </div>
            </div>
            <div class="span3">
              <div class="span12"><input type="checkbox" name="facetes" value="tipologia" tal:attributes="data-name path"/>Tipologia</div>
              <div class="span12 tipologia" data-id="tipologia" style="display:none;">
                <select class="selectpicker" multiple tal:attributes="data-name path">
                  <option>MustardMustardMustard</option>
                  <option>Ketchup</option>
                  <option>Relish</option>
                </select>
              </div>
            </div>
          </div>
        </fieldset>

      
        <div class="input-append">
          <input class="searchInput" type="text" placeholder="Cerca"
                 i18n:attributes="placeholder search"  tal:attributes="data-name path">
          <span class="add-on"><i class="fa fa-search"></i></span>
        </div>
      </div>

    </div>

    <section id="tagslist"
             tal:define="site_properties context/portal_properties/site_properties;
                        use_view_action site_properties/typesUseViewActionInListings|python:()">
      <ul>
        <tal:llistat repeat="contingut continguts">
            <li tal:define="item_url contingut/obj/getURL|contingut/obj/absolute_url">
              <div class="nofavorite">
                <a tal:attributes="href python: item_url+'/view'">
                  <h4><span tal:replace="contingut/obj/Title">Title</span></h4>
                  <p tal:condition="contingut/obj/Description"><span tal:content="contingut/obj/Description">Description</span>
                  </p>
                </a>
              </div>
           </li>
        </tal:llistat>

      </ul>


    </section>

  </div>

  </metal:main>
</body>
</html>
