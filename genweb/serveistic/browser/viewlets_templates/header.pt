<div class="container"
     i18n:domain="genweb">
  <div>
    <div class="header-eines pull-right">
      <div tal:condition="viewlet/is_anonymous" class="header-eines-login">
        <a href="" data-toggle="modal" data-target="#loginModal"
           tal:attributes="href string:${viewlet/root_url}/popup_login_form?came_from=${context/absolute_url}"
           i18n:domain="genweb"
           i18n:translate="identificat">
           Identifica't
        </a>
      </div>
      <div class="header-eines-info">
        <a tal:attributes="href viewlet/url_serveistic_servei">
           <span class="fa fa-info-circle"></span>
        </a>
      </div>
    </div>
    <tal:block replace="structure provider:genweb.search_manager" />
    <script tal:content="viewlet/js_search"></script>
  </div>
  <div class="titol-espai clearfix">
    <h1 class="serveistic-bc-level_1">
      <a tal:attributes="href viewlet/get_url_root" tal:content="structure viewlet/get_html_title">HTML Site Title</a>
    </h1>
    <div tal:condition="viewlet/isServei" class="fa fa-caret-right"></div>
    <div tal:condition="viewlet/isServei" class="serveistic-bc-level_2">
      <a tal:attributes="href viewlet/get_url_servei" tal:content="viewlet/get_servei_title">
        Servei Title
      </a>
    </div>
  </div>
</div>
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true"
     i18n:domain="genweb">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="loginModalLabel" i18n:translate="label_start_session">Inicia la sessió</h3>
  </div>
  <div class="modal-body">
    The popup login form
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Tanca</button>
  </div>
</div>
