    url_expr="string:${portal_url}/serveistic-facetes-controlpanel"
    icon_expr="string:$portal_url/++resource++cpgenweb.png"
    visible="True">
  <permission>Genweb: Webmaster Users</permission>
 </configlet>
</object>
