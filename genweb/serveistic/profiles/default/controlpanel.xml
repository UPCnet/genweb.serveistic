<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool">
 <configlet title="Serveis TIC settings" action_id="genweb.serveistic"
    appId="genweb.serveistic" category="Products"
    condition_expr="python:True"
    url_expr="string:${portal_url}/serveistic-controlpanel"
    icon_expr="string:$portal_url/++resource++cpgenweb.png"
    visible="True">
  <permission>Manage Portal</permission>
 </configlet>

  <configlet title="Serveis TIC Facetes settings" action_id="genweb.serveistic.facetes"
